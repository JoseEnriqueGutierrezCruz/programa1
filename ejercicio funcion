#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define Pi 3.1416

using namespace std;
float vol_cilindro(float r, float a);
using namespace std;
int main() {
    float radio, altura, volumen;	
    cout <<"Ingrese el radio:" ;
	cin >>radio;	
    cout <<"Ingrese la altura:"; 
	cin >> altura;	
    volumen= vol_cilindro(radio,altura);
    cout<<"El volumen es:" <<volumen;    
    return 0; 
 }
float vol_cilindro (float r, float a)
 { float v;
    v= 3.1416*r*r*a;	
    return v;    
}

